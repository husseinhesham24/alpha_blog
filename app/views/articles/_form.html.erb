<div class="container">
	<% if article.errors.any? %>
		<div style="color: red">
			<h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

			<ul>
				<% article.errors.each do |error| %>
					<li><%= error.full_message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="row justify-content-center">
		<div class="col-10">
			<%= form_with model: @article, class: "shadow p-3 mb-3 bg-info rounded" do |f| %>
				
				<div class="form-group row">
				
					<%= f.label :title, class:"col-2 col-form-label text-light" %><br>
					<div class="col-10">
						<%= f.text_field :title, class: "form-control shadow rounded", placeholder:"title of article" %>
					</div>
				</div>

				<div class="form-group row">
					<%= f.label :description, class:"col-2 col-form-label text-light" %><br>
					<div class="col-10">
						<%= f.text_area :description, rows:10, class: "form-control shadow rounded", placeholder:"description of article" %>
					</div>
				</div>

				<div class="form-group row justify-content-center">
					<%= f.submit class:"btn btn-outline-light btn-lg"%><br>
				</div>
			<% end %>
		</div>
		<%= link_to "[ cancel and return to article list ]", articles_path, class: "text-info" %>
	</div>
</div>